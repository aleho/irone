<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ListPreference
        android:key="pref_notifier"
        android:defaultValue="0"

        android:title="@string/pref_notifier_title"
        android:summary="@string/pref_notifier_calendar"

        android:entries="@array/notifiers_labels"
        android:entryValues="@array/notifiers"
        />

    <CheckBoxPreference
        android:key="pref_do_not_disturb"
        android:defaultValue="true"

        android:title="@string/pref_do_not_disturb_title"
        android:summary="@string/pref_do_not_disturb"
        />

    <CheckBoxPreference
        android:key="pref_screen_on"
        android:defaultValue="true"

        android:title="@string/pref_screen_on_title"
        android:summary="@string/pref_screen_on"
        />

</PreferenceScreen>
